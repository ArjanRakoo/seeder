# Environment variables for the database seeder
# Copy this file to .env and customize for your environment

# ============================================================
# CREDENTIAL SOURCES (Choose one method)
# ============================================================

# Option 1: Use 1Password CLI (Recommended for security)
# Uncomment and configure these if you want to use 1Password:
# USE_1PASSWORD=true
# OP_ADMIN_USERNAME_REF="op://vault-name/item-name/username"
# OP_ADMIN_PASSWORD_REF="op://vault-name/item-name/password"

# Option 2: Use environment variables (Default)
# If USE_1PASSWORD is not true, these are required:
ADMIN_USERNAME=admin@example.com
ADMIN_PASSWORD=admin-password

# ============================================================
# OPTIONAL - These have defaults if not set
# ============================================================

# Backend API base URL (default: http://academy.dev.rakoo.com:3000/api)
API_BASE_URL=http://localhost:3000/api

# Authentication context (default: admin)
AUTH_CONTEXT=admin

# Platform identifier (default: web)
AUTH_PLATFORM=web

# Request timeout in milliseconds (default: 30000)
REQUEST_TIMEOUT=30000

# Enable verbose logging (default: false)
VERBOSE=false

# SSL certificate validation (default: true)
# WARNING: Only use false in development environments!
REJECT_UNAUTHORIZED=true

# ============================================================
# 1PASSWORD CLI SETUP INSTRUCTIONS
# ============================================================
# 
# 1. Install 1Password CLI:
#    https://developer.1password.com/docs/cli/get-started/
#
# 2. Sign in to your 1Password account:
#    op signin
#
# 3. Find your secret references:
#    op item list
#    op item get "item-name" --format json
#
# 4. Create secret references in format:
#    op://vault-name/item-name/field-name
#    
#    Example:
#    OP_ADMIN_USERNAME_REF="op://Private/Seeder Admin/username"
#    OP_ADMIN_PASSWORD_REF="op://Private/Seeder Admin/password"
#
# 5. Enable 1Password integration:
#    USE_1PASSWORD=true
